<%= form_tag({:controller => :species, :action => :species_models}, {:method => :get, :remote => true, :id => 'sp_search_form'})  do %>
  <%= text_field_tag :query, '', :id => 'search_field', :placeholder => 'Ingrese nombre de la especie', :collection => 'get_species_name', :include_blank => false, :rel => 'autocomplete' %>
  <%= hidden_field_tag 'species_id' %>
  <%= hidden_field_tag 'class_id'%>
  <%= submit_tag 'ir', :name => nil, :class => 'searchbtn', :id => 'species_src_btn' %>
  <br>
  <input type="checkbox" name="category[]" value="1" id="specie_category1">Invasoras
    <input type="checkbox" name="category[]" value="2" id="specie_category2">Amenazadas
  <input type="checkbox" name="category[]" value="3" id="specie_category3">Endémicas
<% end %>

* {
	margin:0;
	padding:0;
}

*:focus {
    outline: 0;
}

html, body {
  height: 100%;
}

@font-face {
    font-family: 'bebas_neueregular';
    src: url('BebasNeue-webfont.eot');
    src: url('BebasNeue-webfont.eot?#iefix') format('embedded-opentype'),
         url('BebasNeue-webfont.woff') format('woff'),
         url('BebasNeue-webfont.ttf') format('truetype'),
         url('BebasNeue-webfont.svg#bebas_neueregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

body {
    background-image: url(<%= asset_path 'fondobla.jpg' %>);
    font: 14px/24px 'Lato', sans-serif;
    font-size: 1em; 
    line-height: 1.4;
}

.main {
	width: 100%;
    background: url(<%= asset_path 'bg.jpg' %>);
	border-bottom: 6px solid #E48413;
}

.contenedor {
    width: 100%;
    margin: 0 auto;
}

a {
    text-decoration: none;
}

li {
    list-style: none;
}

header {
    position: relative;
    top:0;
    z-index: 1000;
}

nav li a.current {
    background: #fff;
    color: #424242;
}

nav a:hover,
nav a:active {
    background: #fff;
    color: #424242;
}

.betaimg {
    pointer-events: none;
    position: absolute;
    right:0;
    top: 0;
}

footer nav li a {
    display: block;
    text-decoration: none;
    color: #9d9d9d;
    padding:0px 10px !important;
    line-height: 1;
}

footer nav li a.current {
    background: none;
    color: #fff;
}

footer nav a:hover,
footer nav a:active {
    background: none;
    color: #fff;
}

.faq {
    float: right;
}

.faq a {
    text-decoration: none;
    color: #fff;
    padding:0px 10px;
    font-size: 11px;
}

.faq a:hover,
.faq a:active {
    color: #e73a00;
}

.lbabfooter h1, .lbabfooter p, .contacto p {
    font-family: 'lato', sans-serif;
    font-size: 0.7em;
    color: #1d1d1d;
    letter-spacing: 1.1px;
    line-height: 1.2;
}

.contacto p strong {
    color:#5d5d5d;
}

.lbabfooter h1 {
    font-weight: 400;
}

.lbabfooter h1 strong {
    color: #8d8d8d;
}

.lbabfooter a, .contacto a {
    text-decoration: none;
    color: #f8fafb;
}

.alert {
    padding: 5px;
    font-size: 12px;
    background-color: #e48413;
    position: absolute;
    top: 100px;
    left: 50px;
    color:#fff;
    z-index:100;
    border-bottom: 3px solid #F9A848;
}

.termbox {
    display: none;
    position: absolute;
    top:15%;
    left: 10%;
    width: 600px;
    padding: 15px;
    background-color: #8ca816;
}

.terminos {
    width: 600px;
    font-size: 13px;
    background-image: url(<%= asset_path 'fondobla.jpg' %>);
}

.terminos h1 {
    letter-spacing: 4px;
    font-family: 'bebas_neueregular';
    display: inline-block;
    background-color: #8ca816;
    color: #fff;
    font-size: 17px;
    padding: 5px;
    background-image: none;
}

.terminos p {
    padding: 7px;
    color: #4d4d4d;
    font-size: 13px;
}

.terminos br {
    margin-bottom: 5px;
}

.terminos input[type="checkbox"] {
    display:inline-block;
    width:15px;
    height:15px;
    margin-left: 10px;
    vertical-align: baseline;
}

.terminos label {
    color: #1AB0B5;
    font-size: 13px !important;
}

.cancterm {
    padding: 3px 5px;
    background-color: #fff;
    display: inline-block;
    font-weight: bold;
    float: right;
    margin-right: 7px;
}

.xcierre {
position: absolute;
top: 0;
right: 0;
padding: 3px 3px 0 0;
text-align: center;
line-height: 13px;
width: 12px;
height: 10px;
font-size: 11px;
color: #E73A00;
text-decoration: none;
font-weight: bold;
background: transparent;
}

.xcierre2 {
position: absolute;
top: 0;
right: 0;
padding: 3px 3px 0 0;
text-align: center;
line-height: 13px;
width: 12px;
height: 10px;
font-size: 11px;
color: #fff;
text-decoration: none;
font-weight: bold;
background: transparent;
}

.w55 {
    width: 55px !important;
}

/* Media */

/* Smartphones (landscape) ----------- */
@media only screen and (min-width : 321px) {

    .contenedor {
        width: 100%;
    }

    .hlcol1 {
        display: 100%;
        margin: 0 auto;
    }
    
    .intro2 {
        display: none;
    }

    .opciones {
        margin-top: 20px;
    }

    .humbcolor {
        float: left;
        margin-top: 5px;
        margin-left: 0;
    }
    
    .humbimg {
        padding-top: 5px;
        margin-top: 7px;
        margin-left: 5px;
        margin-right: 10px;
        font-family: 'lato', sans-serif;
        font-size: 10px;
        color: #8d8d8d;
        letter-spacing: 0.8px;
        line-height: 1.2;
    }

    .humbimg p {
        margin-top: 20px;
        font-family: 'lato', sans-serif;
        font-size: 10px;
        color: #6d6d6d;
        letter-spacing: 0.8px;
        line-height: 1;
    }

    nav {
        font-family: 'lato', sans-serif;
        text-transform: uppercase;
        font-size: 11px;
        letter-spacing: 1.2px;
        display: inline-block;
        margin: 0 auto;
    }
    
    header nav {
        font-family: 'lato', sans-serif;
        text-transform: uppercase;
        font-size: 11px;
        letter-spacing: 1.2px;
        width: 100%;
        display: inline-block;
        margin: 0 auto;
    }

    header nav li {
        display: inline-block;
        margin: 0;
        width: 19.6%;
    }

    header nav li a {
        display: inline-block;
        color: #7d7d7d;
        text-align: center;
        width: 100%;
        font-size: 85%;
        line-height: 2.2;
    }

    .usuario {
        display: inline-block;
    }

    .usuario a {
        display: inline-block;
        font-family: 'lato', sans-serif;
        font-size: 8px;
        background-color: none !important;
        color:#fff;
        margin-left: 5px;
        padding: 2px;
        text-overflow: ellipsis;
        overflow: hidden;
        max-width: 95px;
        vertical-align: middle;
    }

    .xsalir {
        color: #E48413 !important;
    }

    .op {
        width: 94%;
        display: inline-block;
        margin: 0 3%;
        height: auto;
        margin-top: 20px;
        vertical-align: top;
    }
    
    .introtext h5 {
        width: 80%;
    }

    .lbabfooter { 
        text-align: center;
        margin-bottom: 10px;
    }

    .textft {
        float: none;
    }

    .vermas {
        margin-left: 10px !important;
        text-decoration: none;
        font-size: 11px !important;
        color:#fff;
        vertical-align: top;
        line-height: 2;
        font-weight: 500;
    }

    footer {
        width: 100%;
        background-color: #3d3d3d;
        position: fixed;
        bottom: 0;
        left: 0;
        z-index: 1000;
        margin: 0 auto;
        text-align: center;
    }

    .fixfooter {
        margin-bottom: 78px !important;
    }

    footer nav {
        font-size: 0.87em;
        letter-spacing: 1.2px;
        float: none;
        margin-top: 10px;
    }

    .minus1024 {
    height: -webkit-calc(100% - 189px);
    height: -moz-calc(100% - 189px);
    height: calc(100% - 189px);
    }

}

@media only screen and (min-width : 420px) {
    .humbimg {
        float: left;
        font-size: 11px;
    }

    .humbimg p {
        float: left;
        font-size: 11px;
    }
        .op {
        width: 43%;
    }

    .usuario a {
        margin-left: 10px;
        max-width: 120px;
    }

}

@media only screen and (min-width : 600px) {

    footer {
        height: 44px;
    }

    .fixfooter {
        margin-bottom: 47px !important;
    }

    footer nav {
        float: right;
        margin-right: 30px;
        margin-top: 0;
    }

    .lbabfooter { 
        text-align: left;
        margin-top: 10px;
        margin-left: 15px;
        margin-bottom: 0;
    }

    .textft {
        float: left;
    }

    .minus1024 {
    height: -webkit-calc(100% - 158px);
    height: -moz-calc(100% - 158px);
    height: calc(100% - 158px);
    }

    .usuario a {
        font-size: 10px;
        max-width: 190px;
    }

}

@media only screen and (max-width : 631px) {

    .lbabimg {
        clear:both;
        margin-bottom: 10px;
    }

}

@media only screen and (min-width : 768px) {


    .humbcolor {
        margin-left: 30px;
    }

    .usuario a {
        max-width: 180px;
    }

}

@media only screen and (min-width : 870px) {

    .hlcol1 {
        float: left;
        width: 360px;
        margin-right: 30px;
    }

    .intro2 {
        display: block;
    }

    .opciones {
        margin-top: 0;
    }

    header nav {
        float: right;
        margin-right: 30px;
        margin-top: 0;
        width: auto;
    }

    header nav li {
        float: left;
        width: auto;
    }

    header nav li a {
        padding: 33px 10px 24px;
        text-align: left;
        border-top: none;
        width: auto;
        font-size: 100%;
    }

    .minus1024 {
    height: -webkit-calc(100% - 130px);
    height: -moz-calc(100% - 130px);
    height: calc(100% - 130px);
    }

    .usuario {
        padding-top: 35px;
    }

    .usuario a {
        max-width: 190px;
    }

}

@media only screen and (min-width : 1024px) {

    .contenedor {
        width: 1000px;
    }
    
    .op {
        width: 18%;
        margin: 0 3%;
        margin-top: 0;
    }

    .introtext h5 {
        width: 580px;
    }
    
    .usuario a {
        max-width: 310px;
    }
}


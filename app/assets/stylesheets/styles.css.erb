/* clases de ayuda */

.clearfix:before,
.clearfix:after {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

.clearfix {
    *zoom: 1;
}

.nofl {
    float: none;
}

.invisible {
    display: none;
    visibility: hidden;
}
